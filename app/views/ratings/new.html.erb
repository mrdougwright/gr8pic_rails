<div class="main_container">
	<h1>Rate!</h1>
	<li>
		<div class="button"><%= link_to "HISTORY", ratings_path %></div>
	</li>
	<li>
		<div>
		<%= image_tag @photo.image.url, {:height => 500} %>

		<% if current_user.nil? %>
			<p>You must <%= link_to "sign up", sign_up_path %> or <%= link_to "login", log_in_path %> to rate photos!</p>
		<% else %>
			<p>Random photo generated above. Rate it by number of stars...</p>
			<%= form_for @rating do |f| %>
			<div>
				<%= f.radio_button :value, 1 %>
				<%= f.label "1" %>
				<%= f.radio_button :value, 2 %>
				<%= f.label "2" %>
				<%= f.radio_button :value, 3, {:checked => true} %>
				<%= f.label "3" %>
				<%= f.radio_button :value, 4 %>
				<%= f.label "4" %>
				<%= f.radio_button :value, 5 %>
				<%= f.label "5" %>
			</div> 
				<%= f.hidden_field :photo_id, :value => @photo.id %>
				<%= f.submit "Rate!", :class => "button" %>
			<% end %>
		<% end %>
		</div>
	</li>
	<li>
		<div class="button"><%= link_to "UPLOAD", new_photo_path %></div>
	</li>
</div>
