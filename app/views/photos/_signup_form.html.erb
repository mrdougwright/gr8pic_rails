<span class="small_font">so we know which photo is yours!</span>
	<div>
		<li><h1>Sign Up</h1></li>
		<li><h1>Log In</h1></li>
	</div>
	
<li>
<%= form_for @user do |x| %>
	<% if @user.errors.any? %>
		<div class="error_messages">
			<h2>Form is invalid</h2>
			<ul>
				<% for message in @user.errors.full_messages %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= x.label :email %><br />
		<%= x.text_field(:email, :placeholder => "name") %>
	</p>
	<p>
		<%= x.label :password %><br />
		<%= x.password_field(:password, :placeholder => "password") %>
	</p>
	<p>
		<%= x.label :password_confirmation %><br />
		<%= x.password_field :password_confirmation %>
	</p>

	<%= x.submit "Create Account" %>
<% end %>
	</li>


	<li>
<%= form_tag sessions_path do %>
	<p>
		<%= label_tag :email %><br />
		<%= text_field_tag :email, params[:email] %>
	</p>
	<p>
		<%= label_tag :password %><br />
		<%= password_field_tag :password %>
	</p>
	<p><%= submit_tag "Log in" %></p>
<% end %>
	</li>
